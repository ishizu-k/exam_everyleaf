<div class="container">
  <h3><%= t('admin.list') %></h3>
  <br>
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
  <br>
  <%= link_to t('action.create'), new_admin_user_path %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th class="col-md-4"><%= t('user.name') %></th>
        <th class="col-md-2"><%= t('task.count') %></th>
        <th class="col-md-2"><%= t('action.show') %></th>
        <th class="col-md-2"><%= t('action.edit') %></th>
        <th class="col-md-2"><%= t('action.delete') %></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.tasks.length %></td>
        <td><%= link_to t('action.show'), admin_user_path(user.id) %></td>
        <td><%= link_to t('action.edit'), edit_admin_user_path(user.id) %></td>
        <td><%= link_to t('action.delete'), admin_user_path(user.id), method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>
