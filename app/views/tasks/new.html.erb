<h3>新規作成</h3>

<%= form_with(model: @task, local: true) do |form| %>
  <div class="task">
    <%= form.label :タスク名 %>
    <%= form.text_field :name %>
  </div>
  <div class="task">
    <%= form.label :詳細 %>
    <%= form.text_area :content %>
  </div>
  <br>
  <%= form.submit "作成"%>
  <br>
  <%= link_to '戻る', tasks_path %>
<% end %>
