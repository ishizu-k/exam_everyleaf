<h3><%= t('action.edit') %></h3>

<%= form_with(model: @task, local: true) do |form| %>
  <div class="task">
    <%= form.label :name, t("task.name") %>
    <%= form.text_field :name %>
  </div>
  <div class="task">
    <%= form.label :content, t("task.content") %>
    <%= form.text_area :content %>
  </div>
  <br>
  <%= form.submit %>
  <br>
<% end %>
<%= link_to t('action.back'), tasks_path %>
